{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "types": ["node"],
        "lib": ["ES2020", "DOM"],
        "incremental": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
